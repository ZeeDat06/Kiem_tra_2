<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PickleBall Club</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.Client.styles.css" asp-append-version="true" />
    <style>
        /* ===== GLOBAL STYLES ===== */
        * {
            transition: all 0.3s ease;
        }
        
        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
            min-height: 100vh;
        }

        /* ===== NAVBAR STYLES ===== */
        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
            transition: transform 0.3s ease;
        }
        .navbar-brand:hover {
            transform: scale(1.05);
        }
        .navbar-dark .nav-link {
            color: #fff !important;
            position: relative;
            padding-bottom: 5px;
        }
        .navbar-dark .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: 0;
            left: 50%;
            background-color: #fff;
            transition: all 0.3s ease;
        }
        .navbar-dark .nav-link:hover::after {
            width: 100%;
            left: 0;
        }
        .navbar-dark .nav-link:hover {
            color: rgba(255,255,255,0.8) !important;
            transform: translateY(-2px);
        }
        
        /* ===== FOOTER STYLES ===== */
        footer h5, footer h6 {
            color: #fff !important;
        }
        footer .text-muted {
            color: rgba(255,255,255,0.8) !important;
        }
        footer a {
            transition: all 0.3s ease;
        }
        footer a:hover {
            transform: translateX(5px);
            color: #000 !important;
        }
        footer .bi {
            transition: all 0.3s ease;
        }
        footer .bi:hover {
            transform: scale(1.3) rotate(10deg);
        }

        /* ===== CARD ANIMATIONS ===== */
        .card {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: none;
            box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        }
        .card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 35px rgba(0,0,0,0.15);
        }
        .card-challenge {
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            overflow: hidden;
        }
        .card-challenge::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            transition: left 0.5s;
        }
        .card-challenge:hover::before {
            left: 100%;
        }
        .card-challenge:hover {
            transform: translateY(-8px) rotateX(5deg);
            box-shadow: 0 20px 40px rgba(57, 255, 20, 0.3);
        }

        /* ===== BADGE STYLES ===== */
        .badge-pro {
            background: linear-gradient(45deg, #ffd700, #ffaa00);
            color: #000;
            animation: shimmer 2s infinite;
        }
        .badge-newbie {
            background: linear-gradient(45deg, #17a2b8, #138496);
            color: #fff;
        }
        .badge {
            transition: all 0.3s ease;
        }
        .badge:hover {
            transform: scale(1.1);
        }

        /* ===== BUTTON ANIMATIONS ===== */
        .btn {
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255,255,255,0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }
        .btn:hover::before {
            width: 300px;
            height: 300px;
        }
        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
        }
        .btn:active {
            transform: translateY(-1px);
        }
        .btn-group .btn:hover {
            z-index: 1;
        }

        /* ===== TABLE ANIMATIONS ===== */
        .table tbody tr {
            transition: all 0.3s ease;
        }
        .table tbody tr:hover {
            background-color: rgba(57, 255, 20, 0.1) !important;
            transform: scale(1.01);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        /* ===== WARNING ANIMATION ===== */
        .warning-negative {
            background: linear-gradient(45deg, #dc3545, #c82333);
            color: white;
            padding: 15px;
            border-radius: 8px;
            animation: pulse 1.5s infinite, shake 0.5s ease-in-out infinite;
        }
        @@keyframes pulse {
            0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(220, 53, 69, 0.7); }
            50% { opacity: 0.8; box-shadow: 0 0 20px 10px rgba(220, 53, 69, 0); }
        }
        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-2px); }
            75% { transform: translateX(2px); }
        }
        @@keyframes shimmer {
            0% { background-position: -100% 0; }
            100% { background-position: 100% 0; }
        }

        /* ===== STAT CARD STYLES ===== */
        .stat-card {
            border-left: 4px solid;
            border-radius: 8px;
            transition: all 0.4s ease;
        }
        .stat-card:hover {
            transform: translateX(10px);
        }
        .stat-card.balance { 
            border-left-color: #28a745; 
            background: linear-gradient(135deg, #fff 0%, #e8f5e9 100%);
        }
        .stat-card.challenges { 
            border-left-color: #007bff;
            background: linear-gradient(135deg, #fff 0%, #e3f2fd 100%);
        }
        .stat-card.members { 
            border-left-color: #ffc107;
            background: linear-gradient(135deg, #fff 0%, #fff8e1 100%);
        }

        /* ===== FORM ANIMATIONS ===== */
        .form-control, .form-select {
            transition: all 0.3s ease;
            border: 2px solid #e0e0e0;
        }
        .form-control:focus, .form-select:focus {
            border-color: #39FF14;
            box-shadow: 0 0 15px rgba(57, 255, 20, 0.3);
            transform: scale(1.02);
        }

        /* ===== ALERT ANIMATIONS ===== */
        .alert {
            animation: slideInDown 0.5s ease;
        }
        @@keyframes slideInDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ===== PAGE LOAD ANIMATION ===== */
        .container {
            animation: fadeInUp 0.6s ease;
        }
        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* ===== LIST GROUP ANIMATIONS ===== */
        .list-group-item {
            transition: all 0.3s ease;
        }
        .list-group-item:hover {
            background-color: rgba(57, 255, 20, 0.1);
            transform: translateX(5px);
            border-left: 3px solid #39FF14;
        }

        /* ===== ICON ANIMATIONS ===== */
        .bi {
            transition: all 0.3s ease;
        }
        .btn:hover .bi {
            transform: scale(1.2);
        }
        .display-1.bi, .display-4.bi {
            animation: bounce 2s infinite;
        }
        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        /* ===== LOADING SPINNER ===== */
        .spinner-border {
            animation: spin 1s linear infinite;
        }
        @@keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* ===== FLOATING ANIMATION ===== */
        .floating {
            animation: floating 3s ease-in-out infinite;
        }
        @@keyframes floating {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        /* ===== GLOW EFFECT ===== */
        .glow-on-hover {
            transition: all 0.3s ease;
        }
        .glow-on-hover:hover {
            box-shadow: 0 0 20px rgba(57, 255, 20, 0.6);
        }

        /* ===== GRADIENT TEXT ===== */
        .gradient-text {
            background: linear-gradient(45deg, #39FF14, #00ff88);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* ===== SCORE DISPLAY ===== */
        .display-4 {
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }

        /* ===== DROPDOWN ANIMATIONS ===== */
        .dropdown-menu {
            animation: dropdownFade 0.3s ease;
        }
        @@keyframes dropdownFade {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .dropdown-item {
            transition: all 0.2s ease;
        }
        .dropdown-item:hover {
            padding-left: 25px;
            background-color: rgba(57, 255, 20, 0.2);
        }

        /* ===== MODAL ANIMATIONS ===== */
        .modal.fade .modal-dialog {
            transition: transform 0.3s ease-out;
            transform: scale(0.8);
        }
        .modal.show .modal-dialog {
            transform: scale(1);
        }

        /* ===== PROGRESS BAR ===== */
        .progress-bar {
            animation: progressAnimation 1.5s ease-in-out;
        }
        @@keyframes progressAnimation {
            from { width: 0; }
        }

        /* ===== NAVBAR GLOW ===== */
        header nav {
            box-shadow: 0 4px 20px rgba(55, 55, 173, 0.4);
        }

        /* ===== FOOTER GLOW ===== */
        footer {
            box-shadow: 0 -4px 20px rgba(55, 55, 173, 0.4);
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark shadow-sm" style="background: rgb(55, 55, 173);">
            <div class="container">
                <a class="navbar-brand floating" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-trophy-fill me-2"></i>PickleBall Club
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Members" asp-action="Index">
                                <i class="bi bi-people me-1"></i>Hội viên
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-cash-stack me-1"></i>Tài chính
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Transactions" asp-action="Index">Giao dịch</a></li>
                                <li><a class="dropdown-item" asp-controller="TransactionCategories" asp-action="Index">Danh mục</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Challenges" asp-action="Index">
                                <i class="bi bi-lightning me-1"></i>Sàn đấu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Matches" asp-action="Index">
                                <i class="bi bi-calendar-event me-1"></i>Trận đấu
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="News" asp-action="Index">
                                <i class="bi bi-newspaper me-1"></i>Tin tức
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="text-light py-4 mt-auto" style="background-color: rgb(55, 55, 173);">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5><i class="bi bi-trophy-fill me-2"></i>PickleBall Club</h5>
                    <p class="text-muted">Câu lạc bộ PickleBall - Kết nối đam mê</p>
                </div>
                <div class="col-md-3">
                    <h6>Liên kết nhanh</h6>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted">Về chúng tôi</a></li>
                        <li><a href="#" class="text-muted">Liên hệ</a></li>
                        <li><a href="#" class="text-muted">Điều khoản</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Theo dõi</h6>
                    <a href="#" class="text-muted me-2"><i class="bi bi-facebook fs-5"></i></a>
                    <a href="#" class="text-muted me-2"><i class="bi bi-instagram fs-5"></i></a>
                    <a href="#" class="text-muted"><i class="bi bi-youtube fs-5"></i></a>
                </div>
            </div>
            <hr class="my-3 bg-secondary">
            <div class="text-center text-muted">
                <p class="mb-1">&copy; 2026 - PickleBall Club - All rights reserved</p>
                <small>Designed by Nguyễn Duy Đạt - 1871020133</small>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
