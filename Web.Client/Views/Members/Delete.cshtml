@model Web.Client.Models.Member

@{
    ViewData["Title"] = "Xóa Hội viên";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Xác nhận xóa</h4>
            </div>
            <div class="card-body">
                <p class="lead">Bạn có chắc chắn muốn xóa hội viên này?</p>
                <dl class="row">
                    <dt class="col-sm-4">Họ tên:</dt>
                    <dd class="col-sm-8">@Model.FullName</dd>

                    <dt class="col-sm-4">Ngày tham gia:</dt>
                    <dd class="col-sm-8">@Model.JoinDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Trình độ:</dt>
                    <dd class="col-sm-8">@Model.RankLevel.ToString("F1")</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg me-1"></i>Hủy
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
