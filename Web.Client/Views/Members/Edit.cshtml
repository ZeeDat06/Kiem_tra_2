@model Web.Client.Models.Member

@{
    ViewData["Title"] = "Sửa Hội viên";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning">
                <h4 class="mb-0"><i class="bi bi-pencil me-2"></i>Sửa thông tin Hội viên</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DOB" class="form-label"></label>
                        <input asp-for="DOB" class="form-control" type="date" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="JoinDate" class="form-label"></label>
                        <input asp-for="JoinDate" class="form-control" type="date" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="RankLevel" class="form-label"></label>
                        <input asp-for="RankLevel" class="form-control" type="number" step="0.1" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label"></label>
                        <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<Web.Client.Models.MemberStatus>()"></select>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-check-lg me-1"></i>Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i>Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
