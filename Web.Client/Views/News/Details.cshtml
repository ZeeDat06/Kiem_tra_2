@model Web.Client.Models.News

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <article class="card">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">@Model.Title</h3>
                    @if (Model.IsPinned)
                    {
                        <span class="badge bg-danger">
                            <i class="bi bi-pin-angle-fill"></i> Tin ghim
                        </span>
                    }
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex text-muted mb-4">
                    <div class="me-4">
                        <i class="bi bi-person me-1"></i>
                        <strong>@Model.Author?.FullName</strong>
                    </div>
                    <div>
                        <i class="bi bi-calendar me-1"></i>
                        @Model.PublishedAt.ToString("dddd, dd/MM/yyyy HH:mm")
                    </div>
                </div>
                
                <div class="content">
                    @Html.Raw(Model.Content.Replace("\n", "<br/>"))
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Xóa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </article>
    </div>
</div>
