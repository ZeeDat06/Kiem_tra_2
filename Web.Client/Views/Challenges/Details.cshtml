@model Web.Client.Models.Challenge

@{
    ViewData["Title"] = "Chi tiết Kèo đấu";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0"><i class="bi bi-lightning me-2"></i>@Model.Title</h4>
                <span class="@Model.StatusBadgeClass fs-6">@Model.StatusDisplay</span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Người tạo:</dt>
                            <dd class="col-sm-8">@Model.Creator?.FullName</dd>

                            <dt class="col-sm-4">Chế độ:</dt>
                            <dd class="col-sm-8"><span class="badge bg-secondary">@Model.ModeDisplay</span></dd>

                            <dt class="col-sm-4">Mô tả:</dt>
                            <dd class="col-sm-8">@(Model.Description ?? "Không có mô tả")</dd>

                            @if (!string.IsNullOrEmpty(Model.RewardDescription))
                            {
                                <dt class="col-sm-4">Phần thưởng:</dt>
                                <dd class="col-sm-8">
                                    <span class="text-warning fw-bold">
                                        <i class="bi bi-gift me-1"></i>@Model.RewardDescription
                                    </span>
                                </dd>
                            }

                            @if (Model.Mode == Web.Client.Models.ChallengeMode.MiniGame)
                            {
                                <dt class="col-sm-4">Lệ phí:</dt>
                                <dd class="col-sm-8">@Model.EntryFee.ToString("N0")đ</dd>
                            }
                        </dl>
                    </div>
                    <div class="col-md-4">
                        @if (Model.Mode == Web.Client.Models.ChallengeMode.MiniGame && Model.EntryFee > 0)
                        {
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h6>Quỹ thưởng hiện tại</h6>
                                    <h2 class="mb-0">@Model.TotalPot.ToString("N0")đ</h2>
                                    <small>@Model.Participants.Count người × @Model.EntryFee.ToString("N0")đ</small>
                                    <p class="mt-2 mb-0 small">Đủ làm nồi lẩu rồi!</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <hr />

                <h5><i class="bi bi-people me-2"></i>Danh sách người tham gia (@Model.Participants.Count)</h5>
                @if (Model.Participants.Any())
                {
                    <ul class="list-group">
                        @foreach (var participant in Model.Participants)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @participant.Member?.FullName
                                @if (!string.IsNullOrEmpty(participant.Member?.RankBadge))
                                {
                                    <span class="@participant.Member?.RankBadgeClass">@participant.Member?.RankBadge</span>
                                }
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Chưa có ai tham gia.</p>
                }

                @if (Model.Status == Web.Client.Models.ChallengeStatus.Open)
                {
                    <hr />
                    <h5><i class="bi bi-person-plus me-2"></i>Tham gia kèo</h5>
                    <form asp-action="Join" method="post" class="row g-3">
                        <input type="hidden" name="challengeId" value="@Model.Id" />
                        <div class="col-md-8">
                            <select name="memberId" class="form-select" required>
                                <option value="">-- Chọn thành viên --</option>
                                @foreach (var member in ViewBag.Members ?? new List<Web.Client.Models.Member>())
                                {
                                    <option value="@member.Id">@member.FullName</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-check-lg me-1"></i>Tham gia
                            </button>
                        </div>
                    </form>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>Sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
