@model Web.Client.Models.Match

@{
    ViewData["Title"] = "Xóa Trận đấu";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Xác nhận xóa</h4>
            </div>
            <div class="card-body">
                <p class="lead">Bạn có chắc chắn muốn xóa trận đấu này?</p>
                <dl class="row">
                    <dt class="col-sm-4">Thời gian:</dt>
                    <dd class="col-sm-8">@Model.PlayedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Chế độ:</dt>
                    <dd class="col-sm-8">@Model.FormatDisplay</dd>

                    <dt class="col-sm-4">Người chơi:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Format == Web.Client.Models.MatchFormat.Singles)
                        {
                            <text>@Model.Player1?.FullName vs @Model.Player2?.FullName</text>
                        }
                        else
                        {
                            <text>@Model.Player1?.FullName & @Model.Player3?.FullName vs @Model.Player2?.FullName & @Model.Player4?.FullName</text>
                        }
                    </dd>

                    <dt class="col-sm-4">Tỷ số:</dt>
                    <dd class="col-sm-8">@Model.ScoreTeam1 - @Model.ScoreTeam2</dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg me-1"></i>Hủy
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
