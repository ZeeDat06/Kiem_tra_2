@model Web.Client.Models.TransactionCategory

@{
    ViewData["Title"] = "Xóa Danh mục";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Xác nhận xóa</h4>
            </div>
            <div class="card-body">
                <p class="lead">Bạn có chắc chắn muốn xóa danh mục này?</p>
                <dl class="row">
                    <dt class="col-sm-4">Tên danh mục:</dt>
                    <dd class="col-sm-8">@Model.CategoryName</dd>

                    <dt class="col-sm-4">Loại:</dt>
                    <dd class="col-sm-8">
                        @(Model.Type == Web.Client.Models.TransactionType.Thu ? "Thu" : "Chi")
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg me-1"></i>Hủy
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
